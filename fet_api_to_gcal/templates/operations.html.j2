{% extends "layout.html.j2" %}

{% block content %}
    <h1>Operation Center</h1>
    <table class="table tavle-dark table-stripped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Import date</th>
      <th scope="col">Delete Action</th>
    </tr>
  </thead>
  <tbody>
    {% for op in operations %}
        <tr>
            <th scope="row">{{ op.id }}</th>
            <td>{{ op.import_date }}</td>
            <td>
                <a href="{{ url_for('delete_importation', id_import=op.id) }}" class="btn btn-danger btn-block">delete</a>
            </td>
        </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock content %}