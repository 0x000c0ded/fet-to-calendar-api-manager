{% extends "layout.html.j2" %}

{% block content %}
<div class="container">
    <form method="POST" action="{{ url_for('import_csv_to_calendar_api') }}" class="mui-form" enctype="multipart/form-data">
        <div class="form-group">
            <div class="custom-file">
                <input type="file" name="file" class="custom-file-input text-success" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block"><span style="font-weight: bold;">Import</span></button>
        </div>
    </form>
</div>
{% endblock content %}